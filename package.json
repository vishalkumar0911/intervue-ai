{
  "private": true,
  "scripts": {
    "api": "cd backend && .\\.venv\\Scripts\\python.exe -m uvicorn app.main:app --reload --host 127.0.0.1 --port 8000",
    "web": "wait-on tcp:8000 && npm --prefix frontend run dev",
    "dev": "npx concurrently -n api,web -c green,cyan \"npm run api\" \"npm run web\"",
    "build": "npm --prefix frontend run build",
    "start": "npm --prefix frontend run start -- -p 3000",
    "lint": "npm --prefix frontend run lint"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "tailwindcss-animate": "^1.0.7",
    "wait-on": "^7.0.1"
  }
}
